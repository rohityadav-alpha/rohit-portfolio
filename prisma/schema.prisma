generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model PortfolioProject {
  id          String      @id @default(cuid())
  title       String
  description String
  slug        String      @unique
  techStack   String[]
  githubUrl   String?
  liveUrl     String?
  category    String
  imageUrls   String[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  @@map("portfolio_projects")
}

model PortfolioContact {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
  isRead    Boolean  @default(false)

  @@map("portfolio_contacts")
}

model BlogPost {
  id          Int      @id @default(autoincrement())
  title       String
  slug        String   @unique
  content     String
  excerpt     String?
  author      String   @default("Rohit Yadav")
  category    String   @default("Technology")
  tags        String[]
  imageUrl    String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("blog_posts")
}

model PostLike {
  id              String   @id @default(cuid())
  postId          String   
  postType        String   // "blog" or "project"
  userId          String   
  userFingerprint String?  
  ipAddress       String?  
  likedAt         DateTime @default(now())

  @@unique([postId, userId, postType])
  @@map("post_likes")
}

model PostComment {
  id          String   @id @default(cuid())
  postId      String
  postType    String
  userName    String
  userEmail   String
  comment     String
  parentId    String?
  approved    Boolean  @default(false)
  ipAddress   String?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  parent      PostComment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies     PostComment[] @relation("CommentReplies")

  @@map("post_comments")
}
